<h1> <%= @task.title %></h1>

<div id="task-description">
  <%= @task.details %>
</div>

<div id='task-status'>
  <% if @task.completed == true %>
    <p>This task is completed</p>
  <% else %>
    <p>This task is not completed yet</p>
  <% end %>
</div>

<div class="btn"><%= link_to 'Edit this task', edit_task_url(@task) %></div>

<p><%= link_to 'Back to list', tasks_url %></p>




