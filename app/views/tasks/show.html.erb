<h1> <%= @task.title %></h1>

<div id="task-description">
  <%= @task.details %>
</div>

<div id='task-status'>
  <% if @task.completed == true %>
    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" checked>
    <label class="form-check-label" for="defaultCheck1">This task is completed
    </label>
  <% else %>
    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
    <label class="form-check-label" for="defaultCheck1">This task is not completed yet
    </label>
  <% end %>
</div>

<div class="btn"><%= link_to 'Edit this task', edit_task_url(@task) %></div>

<p><%= link_to 'Back to list', tasks_url %></p>




